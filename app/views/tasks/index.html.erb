<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <!-- <ul> -->
  <!--   <% @tasks.each do |task| %> -->
  <!--   <li><%= link_to task.id, task %> : 【<%= task.status %>】 <%= task.content %></li> -->
  <!--   <% end %>   -->
  <!-- </ul> -->
  
  <div class="row">
    <div class="col-12">
      <% if @tasks.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>id</th>
              <th>ステータス</th>
              <th>タスク</th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.status %></td>
                <td><%= task.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>タスクの登録が0件です！</p>
      <% end %>
    </div>
  </div>
  <!-- ページネーション追加 -->
  <%== pagy_bootstrap_nav(@pagy) %>
  
  <%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>
<% else %>
  <!-- ログイン前 -->
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Task＊List</h1>
      <%= link_to 'Signup', signup_path, class: 'btn btn-lg btn-light' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-dark' %>
    </div>
  </div>
<% end %>